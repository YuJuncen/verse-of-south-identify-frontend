extends layout

block content
  link(rel='stylesheet', href='/stylesheets/index.css')
  h1= `Register`
  form#register-form(style={'max-width': '400px'}, method='POST')
    .form-group
        label(for='username')= 'UID'
        input.form-control#username(required, minlength=4, maxlength=16, type='text', name='username')
    .form-group
        label(for='password')= 'password'
        input.form-control#password(required, minlength=8, maxlength=32, type='password', name='password')
    .form-group
        label(for='repeat-password')= 'password again'
        input.form-control#repeat-password(required, minlength=8, maxlength=32, type='password', name='password1')
    div
      button.btn.btn-primary(style={width: '100%'})= 'submit'
    br
    - if(error)
      .alert.alert-danger
        = `${error}`
        
