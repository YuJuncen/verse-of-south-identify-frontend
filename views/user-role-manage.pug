extends layout

block content
    nav.sticky-top.shadow
        ol.breadcrumb
            li.breadcrumb-item
                a(href="/user") homepage
            li.breadcrumb-item
                a(href="/role") role list
            li.breadcrumb-item
                a(href="/role/mgr") select a user
            li.breadcrumb-item.active manage user role
    h1= "Manage role-user relation"
    div(style={'max-width': '720px'})
        form(method="post")
            .form-group
                label(for='uid')= 'UID'
                input#uid.form-control(disabled, value=user.uid, name='uid')
            .form-group
                label(for="roles")= 'roles'
                select(multiple, name='roles')#roles.form-control
                    - for (let role of allRoles)
                        option(value=role._links.self.href, 
                            selected=userRoles.has(role.roleName))= role.roleName
            button(style={width: '100%'}).btn.btn-primary= 'submit'